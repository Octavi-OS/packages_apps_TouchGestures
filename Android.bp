android_app {
    name: "TouchGestures",

    // Include SettingsLib and it's dependencies
    defaults: ["SettingsLibDefaults"],

    srcs: ["src/**/*.java"],
    resource_dirs: ["res"],
    static_libs: ["VendorSupport-preference"],

    manifest: "AndroidManifest.xml",

    platform_apis: true,
    certificate: "platform",
    dex_preopt: {
        enabled: false,
    },
    optimize: {
        enabled: false,
    },
    privileged: true,
}
